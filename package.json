{
  "name": "iweather",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "@expo-google-fonts/nunito": "^0.2.3",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "axios": "^1.4.0",
    "dayjs": "^1.11.9",
    "expo": "~51.0.0",
    "expo-font": "~12.0.0",
    "expo-splash-screen": "~0.27.0",
    "expo-status-bar": "~1.12.0",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^12.9.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~18.2.14",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-config-expo": "~7.1.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-testing-library": "^7.13.3",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.0",
    "jest-transformer-svg": "^2.1.0",
    "prettier": "^3.6.2",
    "react-native-svg-transformer": "^1.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.0"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "setupFiles": [
      "./__tests__/mocks/libs/async-storage.js",
      "./__tests__/mocks/libs/react-native-safe-area-context.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "babel-jest",
      "^.+\\.svg$": "jest-transformer-svg"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|react-native-safe-area-context)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ],
    "testPathIgnorePatterns": [
      "./__tests__/mocks",
      "./__tests__/utils",
      "./__tests__/coverage"
    ],
    "collectCoverageFrom": [
      ".src/**/*.{ts,tsx}",
      "!./src/**/styles.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/@types",
      "./src/styles",
      "./src/libs/dayjs",
      "./__tests__/coverage"
    ],
    "coverageDirectory": "./__tests__/coverage"
  },
  "private": true
}
